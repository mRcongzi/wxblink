/* pages/book/book.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header{
  position: fixed;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
  box-shadow: 0 0 3px 0 #e3e3e3;
}

.box{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  width: 700rpx;
  height: 68rpx;
  color: #999;
}

.box image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-bottom: -2rpx;
}

.sub-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

.head-img{
  width: 107rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.book-container{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx;
}

.book-container v-book{
  margin-bottom: 10rpx;
}